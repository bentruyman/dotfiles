{
  "name": "dotfiles",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run --stream build",
    "ci": "yarn ci:prepare && yarn ci:execute",
    "ci:execute": "circleci local execute --config .circleci/config.processed.yml",
    "ci:prepare": "circleci config process .circleci/config.yml > .circleci/config.processed.yml",
    "format": "yarn lint --fix",
    "lint": "eslint --ext .ts .",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard-with-typescript": "^12.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.0.0",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.1.0",
    "tsconfigs": "^4.0.2",
    "typescript": "^3.7.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "13.7.0",
    "yarn": "1.21.1"
  }
}
