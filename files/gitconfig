[core]
  excludesfile = ~/.gitignore_global
  pager = delta

[branch]
  autosetuprebase = always

[color]
  ui = auto

[commit]
  gpgsign = true

[delta]
  navigate = true

[diff]
  colorMoved = default
  renames = copies

[includeIf "gitdir/i:~/Development/src/github.com/"]
  path = ~/.gitconfig_user

[include]
  path = ~/.gitconfig_work

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[push]
  default = simple
  followTags = true
