[core]
  excludesfile = ~/.gitignore_global
  pager = delta
  ignorecase = false

[alias]
  checkpoint = commit --no-verify -m "chore: checkpoint"
  down = commit --amend --no-edit --no-verify

[branch]
  autosetuprebase = always

[color]
  ui = auto

[commit]
  gpgsign = true

[delta]
  navigate = true

[diff]
  colorMoved = default
  renames = copies

[include]
  path = ~/.gitconfig_user
  path = ~/.gitconfig_work

[init]
  defaultbranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[push]
  default = simple
  followTags = true
